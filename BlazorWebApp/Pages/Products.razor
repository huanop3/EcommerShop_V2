    private string CreateSlug(string categoryName)
    {
        if (string.IsNullOrEmpty(categoryName))
            return "";
            
        return categoryName
            .ToLower()
            .Replace(" ", "-")
            .Replace("&", "and")
            .Replace("/", "-")
            .Replace("\\", "-")
            .Replace("(", "")
            .Replace(")", "")
            .Trim('-');
    }

